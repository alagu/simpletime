<%- model_class = Task -%>

<div class="tasks">
  <div class="page-header">
    <h1> Dashboard </h1>
  </div>

  <div class="new-task-log rounded-box">
    <%= render "tasks/new" %>
  </div>

  <div class="task-log-lists">
    <h2> Your Task Log </h2>
    <%= render :partial => "tasks/daterangepicker", :datemin => @datemin, :datemax => @datemax %>

    <% current_date = nil %>
    <% @tasks.each_with_index do |task, index| %>

      <% if current_date != task.date %>
        <% if index > 0 %>    
          </table>
          </div>
        <% end %>
        <% current_date = task.date %>
        <div class="rounded-box date-box <%= @hours_progress[task.date.to_s] %>">
            <h3><%= task.date.strftime("%e %B '%y, %A") %></h3>
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th class="log-desc">Description </th>
                  <th class="log-hours">Hours</th>
                  <th class="log-actions">Actions</th>
                </tr>
              </thead>
      <% end %>
      
      <tr>
        <td class="log-desc">
          <%= link_to task.desc, task_path(task) %>
        </td>
        <td class="log-hours">
          <%= task.hours %>
        </td>
        <td class="log-actions">
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_task_path(task), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      task_path(task),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>      
      </tr>

      <% if index == @tasks.length - 1  %>    
        </table>
        </div>
      <% end %>
    <% end %>
  </div>
</div>